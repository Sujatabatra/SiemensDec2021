<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="dinesha" class="com.sujata.producer.Singer">
		<constructor-arg name="name" value="Dinesha"></constructor-arg>
		<constructor-arg name="song" value="LALALA"></constructor-arg>
	</bean>

	<bean id="priya" class="com.sujata.producer.Singer">
		<constructor-arg name="name" value="Priya"></constructor-arg>
		<constructor-arg name="song"
			value="Akhiyo Ke Jharokhe Se"></constructor-arg>
	</bean>

	<bean id="shyamala" class="com.sujata.producer.Juggler">
		<property name="name" value="Shyamala"></property>
		<property name="balls" value="4"></property>
	</bean>
	
	
	<bean id="kshitij" class="com.sujata.producer.Dancer">
		<constructor-arg name="name" value="Kshitij"></constructor-arg>
		<constructor-arg name="style" value="Free Style"></constructor-arg>
	</bean>
	
	<bean id="guitar" class="com.sujata.producer.Guitar"></bean>
	<bean id="drum" class="com.sujata.producer.Drum"></bean>
	
	<bean id="suresh" class="com.sujata.producer.Instrumentalist">
		<property name="name" value="Suresh"></property>
		<property name="instrument" ref="drum"></property>
	</bean>
	
</beans>
